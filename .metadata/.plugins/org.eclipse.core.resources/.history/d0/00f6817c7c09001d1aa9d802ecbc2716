	<script>
		function ranking(start){
			var start= start;
			var td_list= document.getElementsByClassName("rank");
			for(var i=0; i<td_list.length; i++){
				start++;
				td_list[i].innerHTML="&nbsp"+start;
				if(start==20){
					start=0;
				}
			}
		};
		ranking(0);
		function confirm(){
			alert("최신 경기 순위 입니다.")
		}
	</script>
